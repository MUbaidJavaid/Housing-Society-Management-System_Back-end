# ============================================
# SERVER CONFIGURATION
# ============================================

# Environment: development, production, staging, test
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# ============================================
# SECURITY CONFIGURATION
# ============================================

# CORS - Comma separated origins or * for all
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting (15 minutes window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Body Parser Limits
BODY_SIZE_LIMIT=10mb

# ============================================
# PERFORMANCE CONFIGURATION
# ============================================

# Compression
COMPRESSION_ENABLED=true

# Static Files
STATIC_FILES_PATH=public
STATIC_FILES_MAX_AGE=31536000

# ============================================
# DATABASE (Example - MongoDB)
# ============================================

MONGODB_URI=mongodb://localhost:27017/your-database
MONGODB_URI_PROD=mongodb+srv://user:password@cluster.mongodb.net/database

# ============================================
# AUTHENTICATION
# ============================================

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================
# THIRD-PARTY SERVICES
# ============================================

EMAIL_SERVICE_API_KEY=your-email-service-key
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
# ============================================
# JWT CONFIGURATION
# ============================================

# Access Token
JWT_ACCESS_SECRET=your-super-secure-access-secret-key-minimum-32-characters
JWT_ACCESS_EXPIRES_IN=15m

# Refresh Token
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-different-from-access
JWT_REFRESH_EXPIRES_IN=7d

# Password Reset Token
PASSWORD_RESET_EXPIRES_IN=1h

# Email Verification Token
EMAIL_VERIFICATION_EXPIRES_IN=24h

# ============================================
# AUTHENTICATION SETTINGS
# ============================================

# Password Policy
PASSWORD_MIN_LENGTH=8
REQUIRE_STRONG_PASSWORD=true

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15 # minutes
REQUIRE_EMAIL_VERIFICATION=true
SESSION_TIMEOUT=30 # minutes
REFRESH_TOKEN_ROTATION=true

# Cookie Settings
COOKIE_SECURE=true # Set to false for local development
COOKIE_SAME_SITE=strict
COOKIE_DOMAIN=localhost

# ============================================
# EMAIL CONFIGURATION (for password reset, etc.)
# ============================================

SEND_WELCOME_EMAIL=true
FRONTEND_URL=http://localhost:3000
EMAIL_SERVICE_API_KEY=your-email-service-key
# ============================================
# HEALTH CHECK CONFIGURATION
# ============================================

# Health Check Settings
HEALTH_CHECK_TIMEOUT=30000
HEALTH_CHECK_CACHE_DURATION=15000
HEALTH_CHECK_DETAILED=true
HEALTH_CHECK_EXPOSE_ENVIRONMENT=true
HEALTH_CHECK_EXPOSE_VERSION=true
HEALTH_CHECK_EXPOSE_METRICS=true
HEALTH_CHECK_CUSTOM_CHECKS=email-service,storage-service

# Response Time Monitoring
RESPONSE_TIME_SLOW_THRESHOLD=1000 # ms
RESPONSE_TIME_SAMPLES=1000

# External Service URLs for Health Checks
EMAIL_SERVICE_URL=http://localhost:8025
STORAGE_SERVICE_URL=http://localhost:9000/minio/health/live
PAYMENT_GATEWAY_URL=https://api.stripe.com/v1

# Disk Space Thresholds
DISK_SPACE_WARNING_THRESHOLD=80 # percent
DISK_SPACE_CRITICAL_THRESHOLD=90 # percent

# System Resource Thresholds
MEMORY_WARNING_THRESHOLD=80 # percent
MEMORY_CRITICAL_THRESHOLD=90 # percent
CPU_WARNING_THRESHOLD=80 # percent
CPU_CRITICAL_THRESHOLD=90 # percent

# Event Loop Monitoring
EVENT_LOOP_WARNING_THRESHOLD=50 # ms
EVENT_LOOP_CRITICAL_THRESHOLD=100 # ms

# Build Information (for version endpoint)
BUILD_DATE=2024-01-01T00:00:00Z
COMMIT_HASH=abc123def
BUILD_NUMBER=1.0.0

# Application Information
APP_NAME=Express TypeScript API
APP_DESCRIPTION=A modern Express.js API built with TypeScript
CONTACT_EMAIL=ubaidjaved500@gmail.com
SUPPORT_URL=https://support.example.com
DOCUMENTATION_URL=https://docs.example.com
# ============================================
# LOGGING CONFIGURATION
# ============================================

# Winston Log Levels
LOG_LEVEL=info # error, warn, info, http, debug
LOG_COLORIZE=true

# Log Rotation
LOG_ROTATION_ENABLED=true
LOG_ROTATION_MAX_SIZE=20m
LOG_ROTATION_MAX_FILES=14d
LOG_ROTATION_COMPRESS=true
LOG_ROTATION_DATE_PATTERN=YYYY-MM-DD

# Log Files Configuration
LOG_DATABASE_QUERIES=false # Set to true to log database queries
LOG_EXTERNAL_API_CALLS=true
LOG_PERFORMANCE_METRICS=true

# Log Directory Size Monitoring
LOG_MAX_DIRECTORY_SIZE_MB=1024
LOG_CLEANUP_DAYS=30

# ============================================
# SWAGGER CONFIGURATION
# ============================================

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PROTECTED=false # Enable basic auth for Swagger UI
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=password
SWAGGER_TITLE=Express API Documentation
SWAGGER_DESCRIPTION=API documentation with Swagger/OpenAPI
SWAGGER_VERSION=1.0.0

# API Information
SERVICE_NAME=Express TypeScript API
API_VERSION=v1
API_BASE_URL=http://localhost:3000

# ============================================
# MORGAN HTTP LOGGING
# ============================================

# Morgan Format
MORGAN_FORMAT=combined # combined, common, dev, short, tiny
MORGAN_SKIP_HEALTH=false # Skip logging health check endpoints
